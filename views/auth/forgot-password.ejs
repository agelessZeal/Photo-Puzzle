<!DOCTYPE html>
<html lang="en">

<%- include ../layouts %>

<body>

<%- include ../layouts %>

<section class="page-content" style="min-height: 450px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <h3>Recover my password</h3>
                    </div>
                </div>
                <hr/>
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } else if(success && success.length > 0 ){ %>
                    <div class="alert alert-success">
                        <%= success %>
                    </div>
                <% } %>
                <form class="form-account" method="post" action="/auth/reset_password">
                    <fieldset>
                        <div class="form-row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Email Address <span class="req">*</span></label>
                                    <input type="email" class="form-control" placeholder="" name="email" required/>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group text-right">
                            <p class="notice">Already have an account? Click here to <a href="/auth/login">sign in</a>.</p>
                            <button type="submit" class="btn btn-primary">Reset my password</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</section>


<%- include ../layouts %>


</body>
</html>
